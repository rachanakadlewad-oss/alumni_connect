generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ALUMNI
}

model User {
  id             String         @id @default(uuid())
  email          String         @unique
  password       String         @default("12345678")
  name           String
  batch          String
  role           Role           @default(STUDENT)
  bio            String
  linkedin       String?
  github         String?
  website        String?
  organisation   Organisation?  @relation("organisationrel", fields: [organisationId], references: [id])
  organisationId String?
  profilePic     String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Organisation {
  id     String   @id @default(uuid())
  name   String   @unique
  users  User[]   @relation("organisationrel")
}