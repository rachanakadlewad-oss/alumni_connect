generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ALUMNI
}

model User {
  id         String   @id @default(uuid())
  appwriteId String   @unique 
  email      String   @unique
  name       String
  batch      String
  role       Role     @default(STUDENT)
  bio        String?
  linkedin   String?
  github     String?
  website    String?
  profilePic String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
